dynamic_predicate(bought,2).
dynamic_predicate(played1,2).
dynamic_predicate(played2,2).
dynamic_predicate(played3,2).
dynamic_predicate(sold,2).
dynamic_predicate(happy,2).


tabled_predicate(achieveThroughAtom,1).
tabled_predicate(achieveThroughCommand,1).
tabled_predicate(achieve,1).
tabled_predicate(avoidThroughAtom,1).
tabled_predicate(avoidThroughCommand,1).
tabled_predicate(avoidThroughCommand,2).
tabled_predicate(avoid,1).
tabled_predicate(buy,2).
tabled_predicate(play1,2).
tabled_predicate(play2,2).
tabled_predicate(play3,2).
tabled_predicate(playhappily,2).
tabled_predicate(sell,2).

% Actions
% tr_clause(+Head,+Body)



tr_clause(
	buy(X,M),
		ins(bought(X,M))).
tr_clause(
	play1(X,M),
		seq(bought(X,M),
		seq(not(played1(X,M)),
		ins(played1(X,M))))).
tr_clause(
	playhappily(X,M),
		seq(bought(X,M),
		seq(not(played1(X,M)),
		seq(ins(played1(X,M)),
		ins(happy(X,M)))))).
tr_clause(
	play2(X,M),
		seq(played1(X,M),
		seq(not(played2(X,M)),
		ins(played2(X,M))))).
tr_clause(
	play3(X,M),
		seq(played2(X,M),
		seq(not(played3(X,M)),
		ins(played3(X,M))))).
tr_clause(
	sell(X,M),
		seq(played1(X,M),
		seq(not(played3(X,M)),
		seq(not(happy(X,M)),
		seq(ins(sold(X,M)),
		del(bought(X,M))))))).

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% achieve( P_ext ) %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%% achieveThroguhAtom(P_ext) %%%%%%%%%%%%%%%%%%%%%%%%

tr_clause(
	achieveThroughAtom(bought(X,M)),
		bought(X,M)).
tr_clause(
	achieveThroughAtom(played1(X,M)),
		played1(X,M)).
tr_clause(
	achieveThroughAtom(played2(X,M)),
		played2(X,M)).
tr_clause(
	achieveThroughAtom(played3(X,M)),
		played3(X,M)).
tr_clause(
	achieveThroughAtom(happy(X,M)),
		happy(X,M)).
tr_clause(
	achieveThroughAtom(sold(X,M)),
		sold(X,M)).

%%%%%%%%%%%%%%%%%%%%%%%%%%% achieveThroguhCommand(P_ext) %%%%%%%%%%%%%%%%%%%%%%%

tr_clause(
	achieveThroughCommand(bought(X,M)),
		seq(achievePre(buy(X,M)),
		buy(X,M))).
tr_clause(
	achieveThroughCommand(played1(X,M)),
		seq(achievePre(play1(X,M)),
		play1(X,M))).
tr_clause(
	achieveThroughCommand(played1(X,M)),
		seq(achievePre(playhappily(X,M)),
		playhappily(X,M))).
tr_clause(
	achieveThroughCommand(played2(X,M)),
		seq(achievePre(play2(X,M)),
		play2(X,M))).
tr_clause(
	achieveThroughCommand(played3(X,M)),
		seq(achievePre(play3(X,M)),
		play3(X,M))).
tr_clause(
	achieveThroughCommand(happy(X,M)),
		seq(achievePre(playhappily(X,M)),
		playhappily(X,M))).
tr_clause(
	achieveThroughCommand(sold(X,M)),
		seq(achievePre(sell(X,M)),
		sell(X,M))).

%%%%%%%%%%%%%%%%%%%%%%% Final conclusion for achieve(P_ext) %%%%%%%%%%%%%%%%%%%%

tr_clause(
	achieve(bought(X,M)),
		achieveThroughAtom(bought(X,M))).
tr_clause(
	achieve(bought(X,M)),
		achieveThroughCommand(bought(X,M))).
tr_clause(
	achieve(played1(X,M)),
		achieveThroughAtom(played1(X,M))).
tr_clause(
	achieve(played1(X,M)),
		achieveThroughCommand(played1(X,M))).
tr_clause(
	achieve(played2(X,M)),
		achieveThroughAtom(played2(X,M))).
tr_clause(
	achieve(played2(X,M)),
		achieveThroughCommand(played2(X,M))).
tr_clause(
	achieve(played3(X,M)),
		achieveThroughAtom(played3(X,M))).
tr_clause(
	achieve(played3(X,M)),
		achieveThroughCommand(played3(X,M))).
tr_clause(
	achieve(happy(X,M)),
		achieveThroughAtom(happy(X,M))).
tr_clause(
	achieve(happy(X,M)),
		achieveThroughCommand(happy(X,M))).
tr_clause(
	achieve(sold(X,M)),
		achieveThroughAtom(sold(X,M))).
tr_clause(
	achieve(sold(X,M)),
		achieveThroughCommand(sold(X,M))).

%%%%%%%%%%%%%%%%%%%%%%% Final conclusion for achieve(P_ext) %%%%%%%%%%%%%%%%%%%%

tr_clause(
	achieve(bought(X,M)),
		achieveThroughAtom(bought(X,M))).
tr_clause(
	achieve(bought(X,M)),
		achieveThroughCommand(bought(X,M))).
tr_clause(
	achieve(played1(X,M)),
		achieveThroughAtom(played1(X,M))).
tr_clause(
	achieve(played1(X,M)),
		achieveThroughCommand(played1(X,M))).
tr_clause(
	achieve(played2(X,M)),
		achieveThroughAtom(played2(X,M))).

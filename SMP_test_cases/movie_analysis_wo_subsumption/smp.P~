tr_clause(
	avoid(happy(X,M)),
		avoidThroughAtom(happy(X,M))).
tr_clause(
	avoid(happy(X,M)),
		avoidThroughCommand(happy(X,M))).
tr_clause(
	avoid(sold(X,M)),
		avoidThroughAtom(sold(X,M))).
tr_clause(
	avoid(sold(X,M)),
		avoidThroughCommand(sold(X,M))).



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% achievePre(Q) %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

tr_clause(
	achievePre(buy(X,M)),
		true).
tr_clause(
	achievePre(play1(X,M)),
		seq(achieve(bought(X,M)),
		avoid(played1(X,M)))).
tr_clause(
	achievePre(play2(X,M)),
		seq(achieve(played1(X,M)),
		avoid(played2(X,M)))).
tr_clause(
	achievePre(play3(X,M)),
		seq(achieve(played2(X,M)),
		avoid(played3(X,M)))).
tr_clause(
	achievePre(playhappily(X,M)),
		seq(achieve(bought(X,M)),
		avoid(played1(X,M)))).
tr_clause(
	achievePre(sell(X,M)),
		seq(achieve(played1(X,M)),
		seq(avoid(played3(X,M)),
		avoid(happy(X,M))))).

